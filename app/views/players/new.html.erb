<%= form_for @player do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.number_field :age %>

<% @teams.each do |team| %>
  <p><%= f.radio_button :team_id, team.id %>
  <%= f.label :team_id, "#{team.name}" %></p>
<% end %>


<%= f.submit "Create Player" %>

<% end %>